@model Medicine.Models.Doctors.DoctorType
@{
    ViewBag.Title = "Edit Type";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("EditType", "Doctor", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(model=>Model.DoctorTypeId)
    @Html.HiddenFor(model => Model.WhenAdded)
    @Html.HiddenFor(model => Model.WhoAdded)
    @Html.HiddenFor(model=>Model.WhenModified)
    @Html.HiddenFor(model=>Model.WhoModified)
    @Html.HiddenFor(model=>Model.IsVisible)
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row card">
            <div class="row">
                <div class="col l3 m4 s6" style="margin-top:10px;margin-left:10px;">
                    <a href="@Url.Action("TypeList","Doctor")" class="btn buttonsColor">
                        <i class="material-icons left">reply</i>
                        Back
                    </a>
                </div>
            </div>
            <div class="col l12 m12 s12">
                <div class="row">
                    <div class="input-field col l8 push-l2 m8 push-m2 s12">
                        <h5 class="center" style="margin-top:20px;margin-bottom:20px;">You are editiong chosen doctor type</h5>
                    </div>
                    <div class="input-field col l8 push-l2 m8 push-m2 s12">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.EditorFor(x => x.Name, new { htmlAttributes = new { name = "Name", @class = "validate" } })
                        @Html.LabelFor(model => model.Name, new { @for = "Name" })
                        @Html.ValidationMessage("Name", "", new { @class = "input-validation-error" })
                    </div>
                    <div class="input-field col l8 push-l2 m8 push-m2 s12">
                        <i class="material-icons prefix">assignment</i>
                        @Html.TextAreaFor(x => x.Description, new { style = "height:150px", htmlAttributes = new { name = "Description", @class = "validate" } })
                        @Html.LabelFor(model => model.Description, new { @for = "Description" })
                        @Html.ValidationMessage("Description", "", new { @class = "input-validation-error" })
                    </div>
                </div>
            </div>
            <div class="col l8 push-l2 m8 push-m2 s12 center ">
                <button type="submit" class="btn submitButton" style="margin-top:25px;margin-bottom:35px;"><i class="material-icons left">save</i>Save</button>
            </div>
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
