@model  PagedList.IPagedList<Medicine.Models.Doctors.DoctorType>
@using PagedList.Mvc
@{
    ViewBag.Title = "List of types";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <div class="row">
        <div class="row">
            <div class="col l6 m6 s6">
                <a class="btn buttonsColor" href="@Url.Action("AdminPanel","Home")"><i class="material-icons medium left">reply</i>Back</a>
                <a class="btn buttonsColor" href="@Url.Action("CreateType","Doctor")"><i class="material-icons medium left">add_circle</i>Add type</a>
            </div>
        </div>
        <div class="row">
            <div class="col l12 m12 s12">
                @if (Model.Count > 0)
                {
                    <table class="responsive-table bordered">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th></th>
                                <th>
                                    Description
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>
                                        @Html.DisplayFor(model => item.Name)
                                    </th>
                                    <th></th>
                                    <th>
                                        @Html.DisplayFor(model => item.Description)
                                    </th>
                                    <th>
                                        <a class="btn iconClass iconDelete " href="@Url.Action("DeleteType", new { id = item.DoctorTypeId})"><i class="material-icons left">delete_forever</i></a>
                                        <a class="btn iconClass iconEdit " href="@Url.Action("EditType", new { id = item.DoctorTypeId})"><i class="material-icons left">mode_edit</i></a>
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h4 class="center">
                        Hasn't been added any record
                    </h4>
                }
            </div>
        </div>
        @if (Model.Count > 10)
        {
            <div class="center">
                @Html.PagedListPager(Model, page => Url.Action("TypeList", new { page }))
            </div>
        }   
    </div>
</div>
