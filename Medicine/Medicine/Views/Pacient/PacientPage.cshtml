@model Medicine.Models.Pacients.Pacient
@{
    ViewBag.Title = "PacientPage";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<link href="~/Content/MainPagePacient.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Noto+Sans|Open+Sans" rel="stylesheet">

<div class="container">
    <div class="row">
        <ul id="tabs-swipe-demo" class="tabs">
            <li class="tab col s3"><a class="active" href="#test-swipe-1">Profile</a></li>

            <li class="tab col s3"><a href="#test-swipe-3">Appointments</a></li>
        </ul>

        <div id="test-swipe-1" class="col l12 m12 s12 back-color ">
           
            <div class="col l6 m6 s12 wrap-page ">
                <div class="row col l3 m3 s12">
                    <a class="btn waves-effect waves-light edit-button" href="@Url.Action("EditPacient", new { user = User.Identity.Name})">Edit profile</a>
                 
                </div>
                <div class="col l12  m12 s12 photo-block">
                    <img src="@Model.Picture" class="materialboxed user-photo responsive-img" />
                </div>
                <div class="col l12 m12 s12 card table-margin card-color darken-3">
                    <table class="short-table-info">
                        <tr>
                            <th>Name:</th>
                            <th>@Model.Name</th>
                        </tr>
                        <tr>
                            <th>Surname:</th>
                            <th>@Model.Surname</th>
                        </tr>
                        <tr>
                            <th>Gender:</th>
                            <th>@Model.Sex</th>
                        </tr>
                        <tr>
                            <th>Age:</th>
                            <th>@Model.Age</th>
                        </tr>
                        <tr>
                            <th>Unique number:</th>
                            <th>@Model.UniqueNumber</th>
                        </tr>
                        <tr>
                            <th>Birthday:</th>
                            <th>@Model.Birthday.ToShortDateString()</th>
                        </tr>
                        <tr>
                            <th>Address:</th>
                            <th>@Model.Address</th>
                        </tr>
                        <tr>
                            <th>Phone number:</th>
                            <th>@Model.Mobile</th>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <th>@Model.Email</th>
                        </tr>
                        <tr>
                            <th>Registration date:</th>
                            <th>@Model.WhenAdded.Value.ToShortDateString()</th>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="col l6  m6 s12 ">
                @Html.Action("_DiseaseHistoryPartial", "Pacient")
            </div>
        </div>
        <div id="test-swipe-3" class="col s12">
            @Html.Action("_Appointmants", "Pacient")
        </div>
    </div>
</div>
