@model List<Medicine.Models.Schedules.Schedule>


<div style="min-height:300px;">
    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <div class="col l3 m4 s12 card-time z-depth-1-half " style="margin-top:20px; margin-right:20px;">
                <div>
                    <p>@item.Doctor.Name @item.Doctor.Sername</p>
                    <p>@item.Doctor.DoctorType.Name</p>
                </div>
                <div>
                    <p>Date: @item.Date.ToShortDateString()</p>
                    <p>Time: @item.TimeFrom.Value.ToShortTimeString() - @item.TimeTo.Value.ToShortTimeString()</p>
                </div>
            </div>
        }
    }
    else
    {
        <h5 style="margin-top:50px;text-align:center;">You do not have any registered appointmants.</h5>
    }
</div>
