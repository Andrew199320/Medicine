@model Medicine.Models.Schedules.Schedule
@{
    ViewBag.Title = "Create Journal";
}

<link href="~/Scripts/air-datepicker-master/dist/css/datepicker.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/air-datepicker-master/dist/js/datepicker.min.js"></script>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/materialize")


    @using (Ajax.BeginForm("CreateJournal", "Schedule", new AjaxOptions { UpdateTargetId = "addForm" }))
    {
        <input type="text" style="display:none;" value="@ViewBag.DoctorId" name="id" />

        <div class="input-field col l12  m12  s12">
            <i class="material-icons prefix">date_range</i>
            @Html.DropDownListFor(x => x.TimetableId, (IEnumerable<SelectListItem>)ViewBag.Timetable, "Schoose a timetable")
        </div>

        <div class="input-field col l12  m12  s12">
            <i class="material-icons prefix">date_range</i>
            <label for="datetimepicker2" class="marginTop">Date</label>
            <input id="datetimepicker2" type='text' class='datepicker-here' data-timepicker="false" name="Date" />
        </div>
        <div class="input-field col center l12 m12 s12">
            <button type="submit" class="btn submitButton center-align"><i class="material-icons left">save</i>Save</button>
        </div>
    }

<script>
    $('select').material_select();
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}