@model Medicine.Models.Schedules.MeetTime
@{
    ViewBag.Title = "Create Type";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/timepicker/jquery.timepicker.min.js"></script>
<link href="~/Scripts/timepicker/jquery.timepicker.css" rel="stylesheet" />
@using (Html.BeginForm("EditMeetTime", "Schedule", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(model => Model.MeetTimeId)
    @Html.HiddenFor(model => Model.TimetableId)
    @Html.HiddenFor(model => Model.WhenAdded)
    @Html.HiddenFor(model => Model.WhoAdded)
    @Html.HiddenFor(model => Model.WhenModified)
    @Html.HiddenFor(model => Model.WhoModified)
    @Html.HiddenFor(model => Model.IsVisible)
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row card">
            <div class="row">
                <div class="col l3 m4 s6" style="margin-top:10px;margin-left:10px;">
                    <a href="@Url.Action("TimetableList","Schedule")" class="btn buttonsColor">
                        <i class="material-icons left">reply</i>
                        Back
                    </a>
                </div>
            </div>
            <div class="col l12 m12 s12 ">
                <div class="row">
                    <div class="input-field col l8 push-l2 m8 push-m2 s12">
                        <h5 class="center" style="margin-top:20px;margin-bottom:20px;">You are editing specified time earlier</h5>

                        <div class="input-field col l12 m12 s12">
                            <i class="material-icons prefix">date_range</i>
                            <label for="timeFrom1">Time: from</label>
                            <input id="timeFrom1" type="text" data-time-format="H:i" name="TimeFrom" value="@Model.TimeFrom.ToShortTimeString()" />
                        </div>
                        <div class="input-field col l12 m12 s12">
                            <i class="material-icons prefix">date_range</i>
                            <label for="timeTo1">Time: to</label>
                            <input id="timeTo1" type="text" data-time-format="H:i" name="TimeTo" value="@Model.TimeTo.ToShortTimeString()" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col s12 center">
                <button type="submit" class="btn submitButton" style="margin-top:25px;margin-bottom:35px;"><i class="material-icons left">save</i>Save</button>
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $('select').material_select();
    });
</script>

<script>
    $('#timeFrom1').timepicker({ 'timeFormat': 'H:i', 'step': 10, 'scrollDefault': 'now' })
    $('#timeTo1').timepicker({ 'timeFormat': 'H:i', 'step': 10, 'scrollDefault': 'now' })

</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}