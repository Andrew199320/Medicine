@model List<Medicine.Models.Schedules.Schedule>
<div class="container">
    <div class="row">
        <div class="row">
            <div class="col l12 m12 s12">
                @if (Model.Count > 0)
                {
                    <table class="responsive-table highlight bordered">
                        <thead>
                            <tr>
                                <th>From</th>
                                <th>To</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @if (item.isBooked.Value != false)
                                    {
                                    <th hidden>
                                        @Html.DisplayFor(model => item.TimeFrom)
                                    </th>
                                    <th hidden>
                                        @Html.DisplayFor(model => item.TimeTo)
                                    </th>
                                    <th hidden>
                                        <a class="btn btn waves-effect waves-light submitButton " href="@Url.Action("RegisterToAnAppointmant", new { id = item.ScheduleId})"><i class="material-icons left">mode_edit</i></a>
                                    </th>
                                    }
                                    else
                                    {
                                        <th>
                                            @Html.DisplayFor(model => item.TimeFrom)
                                        </th>
                                        <th>
                                            @Html.DisplayFor(model => item.TimeTo)
                                        </th>
                                        <th>
                                            <a class="btn btn waves-effect waves-light submitButton " href="@Url.Action("RegisterToAnAppointmant", new { id = item.ScheduleId})"><i class="material-icons left">mode_edit</i></a>
                                        </th>
                                    }                               
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h4 class="center">
                        Doctor doesn't work this day or all places has been booked
                    </h4>
                }
            </div>
        </div>
    </div>
</div>



